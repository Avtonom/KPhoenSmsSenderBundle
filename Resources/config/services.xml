<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sms.sender.class">SmsSender\SmsSender</parameter>
    </parameters>

    <services>
        <!-- SMS sender -->
        <service id="sms.sender" class="%sms.sender.class%">
        </service>

        <!-- HTTP adapters -->
        <service id="sms.http_adapter.buzz" class="SmsSender\HttpAdapter\BuzzHttpAdapter" public="false">
        </service>

        <service id="sms.http_adapter.curl" class="SmsSender\HttpAdapter\CurlHttpAdapter" public="false">
        </service>
    </services>

</container>
